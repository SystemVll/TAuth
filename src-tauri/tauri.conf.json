{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "TAuth",
    "version": "0.1.4",
    "identifier": "com.tauth.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "TAuth",
                "width": 512,
                "height": 768
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/512x512.png"
        ]
    }
}
